<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <display-name>Archetype Created Web Application</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/Main-servlet.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>main.controllers.listener.AppStartListener</listener-class>
    </listener>

    <!--<error-page>-->
        <!--<error-code>400</error-code>-->
        <!--<location>/</location>-->
    <!--</error-page>-->

    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>main.controllers.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>WhiteList</filter-name>
        <filter-class>main.controllers.filters.WhiteList</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>WhiteList</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>isAliveFilter</filter-name>
        <filter-class>main.controllers.filters.IsAliveFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>isAliveFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>isAliveFilter</filter-name>
        <url-pattern>/catalog</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>isAliveFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>isAliveFilter</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>isAliveFilter</filter-name>
        <url-pattern>/cart</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>isAliveFilter</filter-name>
        <url-pattern>/product</url-pattern>
    </filter-mapping>


</web-app>