                <prop key="hibernate.connection.url">jdbc:mysql://server.w-bit.ru:3306/demo</prop>
                <prop key="hibernate.connection.username">demo</prop>
                <prop key="hibernate.connection.password">q1w2e3r45</prop>
                <prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
                <!--<prop key="hibernate.connection.shutdown">true</prop>-->
                <prop key="hibernate.connection.writedelay">0</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>

    </bean>



</beans>